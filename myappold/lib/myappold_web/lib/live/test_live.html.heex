<div>
  <.form
    for={%{}}
    as={:test}
    id="test-form"
    phx-change="validate"
    phx-submit="save"
  >
    <input
      value={@test}
      type="text"
      name="test[title]"
      autocomplete="off"
      phx-debounce="blur"
      class="border-2 border-gray-300 rounded-md p-2"
    />

    <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-md">Submit</button>
  </.form>

  <p id="preview" class="text-gray-500">Preview: <%= @test %></p>
</div>
